{% extends 'usuarios/base.html'%}
{% load static%}
{% block content%}
<div class="container">
    <div class="login-box">
        <h2 class="cards__titulo" >Cadastro</h2>
        <form action="#" method="post">
            <div class="cabecalho__busca">
                <div class="busca__fundo">
                    <input class="busca__input" type="text" name="user" placeholder="Usuario" required>
                </div>
            </div>
            <div class="cabecalho__busca">
                <div class="busca__fundo">
                     <input class="busca__input" type="text" name="nome" placeholder="Nome completo" required>
                </div>
            </div>
            <div class="cabecalho__busca">
                <div class="busca__fundo">
                    <input class="busca__input" type="text" name="email" placeholder="E-mail" required>
                </div>
            </div>
            <div class="cabecalho__busca">
                <div class="busca__fundo">
                    <input class="busca__input" type="password" name="senha" placeholder="Senha" required>
                </div>
            </div>
            <input type="submit" value="Cadastrar">
        </form>
        <p class="imagem__titulo" >Já tem uma conta? <a href="{% url 'login' %}">Faça login</a></p>
    </div>
</div>
</div>
</main>
{% endblock %}